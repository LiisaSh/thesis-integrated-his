@model PhamarcySystem.Models.Medicine

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Medicine</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MedicineCode" class="control-label"></label>
                <input asp-for="MedicineCode" class="form-control" required/>
                <span asp-validation-for="MedicineCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PharmacyMedicId" class="control-label"></label>
                <select asp-for="PharmacyMedicId" class ="form-control" asp-items="ViewBag.PharmacyMedicId"></select>
            </div>
            <div class="form-group">
                <label asp-for="MedicineName" class="control-label"></label>
                <input asp-for="MedicineName" class="form-control" required/>
                <span asp-validation-for="MedicineName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiseaseCured" class="control-label"></label>
                <textarea asp-for="DiseaseCured" class="form-control" required rows="5"></textarea>
                <span asp-validation-for="DiseaseCured" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" required/>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
