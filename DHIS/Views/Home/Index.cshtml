@{
    ViewData["Title"] = "Home";
}

<div class="main-content">
    <div class="breadcrumb">
        <h1>Reports</h1>
        <ul>
            <li><a href="#">Dashboard</a></li>
            <li>Overall Reporting</li>
        </ul>
    </div>
    <div class="separator-breadcrumb border-top"></div>

    <div class="row">
        <!-- ICON BG -->
        <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="card card-icon-bg card-icon-bg-primary o-hidden mb-4">
                <div class="card-body text-center">
                    <i class="i-Add-User"></i>
                    <div class="content">
                        <p class="text-muted mt-2 mb-0">Registered Patients</p>
                        <p class="text-primary text-24 line-height-1 mb-2">@ViewBag.Patients</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="card card-icon-bg card-icon-bg-primary o-hidden mb-4">
                <div class="card-body text-center">
                    <i class="i-Financial"></i>
                    <div class="content">
                        <p class="text-muted mt-2 mb-0">Pending Prescriptions</p>
                        <p class="text-primary text-24 line-height-1 mb-2">@ViewBag.notcollected</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="card card-icon-bg card-icon-bg-primary o-hidden mb-4">
                <div class="card-body text-center">
                    <i class="i-Checkout-Basket"></i>
                    <div class="content">
                        <p class="text-muted mt-2 mb-0">Completed Prescriptions</p>
                        <p class="text-primary text-24 line-height-1 mb-2">@ViewBag.collected</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="card card-icon-bg card-icon-bg-primary o-hidden mb-4">
                <div class="card-body text-center">
                    <i class="i-Money-2"></i>
                    <div class="content">
                        <p class="text-muted mt-2 mb-0">Registered Doctors</p>
                        <p class="text-primary text-24 line-height-1 mb-2">@ViewBag.Doctors</p>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="card-title">Hospital Medical Spendings</div>
                    <div id="echartBar" style="height: 300px;"></div>
                </div>
            </div>
        </div>
        
    </div>

    <div class="row">
        
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-body p-0">
                    <h5 class="card-title m-0 p-3">Last 20 Day Leads</h5>
                    <div id="echart3" style="height: 360px;"></div>
                </div>
            </div>
        </div>

    </div>


</div>