
@model DHIS.Models.IdentityModels.ForgotPasswordViewModel

@{
    Layout = null;
}

<head>

    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/bootstrap/dist/js/jquery-1.11.1.js"></script>
    <link href="~/css/account.css" rel="stylesheet" />
    <!------ Include the above in your HEAD tag ---------->
    <title>GIPF | Enterprise Software Solution</title>
</head>
<body>
    <div class="login-form">
        <form asp-controller="Account" asp-action="ForgotPassword" method="post" role="form">

            <div class="text-center">

                <img src="~/images/gipf.png" />

            </div>
            <hr class="hr" />
            <h4 class="modal-title text-center"><strong>ENTERPRISE SOFTWARE SOLUTION <br /><span>(ESS)</span></strong></h4>

            <hr class="hr" />
            <h5 class="text-center"> <strong>RESET PASSWORD QUESTIONS</strong></h5>
            <hr />
            @{
                var errorMessage = this.TempData["CheckEmail"]?.ToString();
                var userEmail = this.TempData["UserEmail"].ToString();
                if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-success">
                        <em>  <strong>Thank you!</strong> @errorMessage </em>
                    </div>
                }
            }
            <hr />
            1. What primary school did you attend?
            <div class="form-group">
                <input type="text" class="form-control" placeholder="">
                <em><span class="text-danger"></span></em>
            </div>
            2. In what town or city was your first full time job?
            <div class="form-group">
                <input type="text" class="form-control" placeholder="">
                <em><span class="text-danger"></span></em>
            </div>
            3. What was your childhood nickname?
            <div class="form-group">
                <input type="text" class="form-control" placeholder="">
                <em><span class="text-danger"></span></em>
            </div>
            <hr />
            <div class="form-group">
                <input class="form-control" placeholder="Email Address" value="@userEmail" readonly>
                <em><span class="text-danger"></span></em>
            </div>
            <div class="form-group">
                <input class="form-control" placeholder="Password">
                <em><span class="text-danger"></span></em>
            </div>
            <div class="form-group">
                <input class="form-control" placeholder="Confirm Password">
                <em><span class="text-danger"></span></em>
            </div>
            <div class="form-group small clearfix">

                Already have an account?
                <a href="http://10.224.167.19:84/" class="forgot-link">Sign in here</a>
            </div>

            <input type="submit" class="btn btn-primary btn-block" value="Reset">


        </form>


    </div>
</body>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

