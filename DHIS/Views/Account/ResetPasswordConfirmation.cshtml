@model DHIS.Models.IdentityModels.ResetPasswordViewModel

@{
    Layout = null;
}

<head>

    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/bootstrap/dist/js/jquery-1.11.1.js"></script>
    <link href="~/css/account.css" rel="stylesheet" />
    <!------ Include the above in your HEAD tag ---------->
    <title>GIPF | Enterprise Software Solution</title>
</head>
<body>
    <div class="login-form">
        <form asp-controller="Account" asp-action="ForgotPassword" method="post" role="form">

            <div class="text-center">

                <img src="~/images/gipf.png" />

            </div>
            <hr class="hr" />
            <h4 class="modal-title text-center"><strong>ENTERPRISE SOFTWARE SOLUTION <br /><span>(ESS)</span></strong></h4>

            <hr class="hr" />
            <h5 class="text-center"> <strong>PASSWORD RESET CONFIRMATION</strong></h5>
            <hr />
            @{
                var errorMessage = this.TempData["SuccessMessage"]?.ToString();

                if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-success">
                        <em>  <strong>Thank you!</strong> @errorMessage </em>
                    </div>
                }
            }
            <hr />
            <div class="form-group small clearfix">

                Account password reseted?
                <a href="http://10.224.167.19:84/" class="forgot-link">Sign in here</a>
            </div>


        </form>


    </div>
</body>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

