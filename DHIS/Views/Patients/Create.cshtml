@model DHIS.Models.Patient

@{
    ViewData["Title"] = "Create";
}


    <div class="card mb-4">
        <div class="card-header">
            <h2>Patient Profile Creation</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create" enctype="multipart/form-data">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gender" class="control-label"></label>
                    <input asp-for="Gender" class="form-control" />
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nationality" class="control-label"></label>
                    <input asp-for="Nationality" class="form-control" />
                    <span asp-validation-for="Nationality" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IDNumber" class="control-label"></label>
                    <input asp-for="IDNumber" class="form-control" />
                    <span asp-validation-for="IDNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DOB" class="control-label"></label>
                    <input asp-for="DOB" class="form-control" type="date" />
                    <span asp-validation-for="DOB" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CellphoneNumber" class="control-label"></label>
                    <input asp-for="CellphoneNumber" class="form-control" />
                    <span asp-validation-for="CellphoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PostalAddress" class="control-label"></label>
                    <textarea asp-for="PostalAddress" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="PostalAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ResidentialAddress" class="control-label"></label>
                    <textarea asp-for="ResidentialAddress" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="ResidentialAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NextOfKin" class="control-label"></label>
                    <input asp-for="NextOfKin" class="form-control" />
                    <span asp-validation-for="NextOfKin" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NextOfKinCell" class="control-label"></label>
                    <input asp-for="NextOfKinCell" class="form-control" />
                    <span asp-validation-for="NextOfKinCell" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProfileImage" class="control-label"></label>
                    <input asp-for="ProfileImage" class="form-control" />
                    <span asp-validation-for="ProfileImage" class="text-danger"></span>
                </div>

                <input asp-for="Created_by" class="form-control" value="@User.Identity.Name" type="hidden" />

                <input asp-for="ImagePath" class="form-control" value="1" type="hidden" />

                <input asp-for="Modified_by" class="form-control" value="@User.Identity.Name" type="hidden" />


                <input asp-for="Created_on" class="form-control" value="@DateTime.Now" type="hidden" />
                <span asp-validation-for="Created_on" class="text-danger"></span>

                <input asp-for="Modified_on" class="form-control" value="@DateTime.Now" type="hidden" />

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success btn-rounded" />
                </div>
            </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
