@model DHIS.Models.Doctor

@{
    ViewData["Title"] = "Edit";
}

<div class="card mb-4">
    <div class="card-header">
        <h2>Edit Doctors</h2>
    </div>
    <div class="card-body">
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="DoctorID" />
                    
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Gender" class="control-label"></label>
                        <input asp-for="Gender" class="form-control" />
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nationality" class="control-label"></label>
                        <input asp-for="Nationality" class="form-control" />
                        <span asp-validation-for="Nationality" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IDNumber" class="control-label"></label>
                        <input asp-for="IDNumber" class="form-control" />
                        <span asp-validation-for="IDNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="HosptalDoctorID" class="control-label"></label>
                        <select asp-for="HosptalDoctorID" class="form-control" asp-items="ViewBag.HosptalDoctorID"></select>
                        <span asp-validation-for="HosptalDoctorID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
        </div>
    </div>


        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
