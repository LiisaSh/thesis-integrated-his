@model DHIS.Models.Hospital

@{
    ViewData["Title"] = "Edit";
}

    <div class="card mb-4">
        <div class="card-header">
            <h2>Edit Hospital</h2>
        </div>
        <div class="card-body">
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="HospitalID" />
                        <div class="form-group">
                            <label asp-for="HospitalName" class="control-label"></label>
                            <input asp-for="HospitalName" class="form-control" />
                            <span asp-validation-for="HospitalName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>
            </div>
        </div>
            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
